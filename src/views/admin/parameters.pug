block scripts
    script(type="text/javascript").
        $(document).ready(function() {
            $('#roles_btn').click(function(){
                    $('.role-form').toggle()
                    $('.role-table').toggle()
            })
        })
        function removeRole(elm, id) {
            $.ajax({
                url:'/admin/remove-role',
                type:'post',
                data:{id},
                success: function({message, titles}){
                    let rows = '';
                    titles.forEach(title => rows +=`<tr><td>${title.id}</td><td>${title.name}</td><td><button class="btn btn-danger btn-sm" onClick="removeRole(this, ${title.id})"><i class="mdi mdi-delete"></i></button></td></tr>`)
                    
                    $(elm).parent().parent().parent().empty().html(rows)
                },
                error: function(err){
                    console.log(err)
                }
            })
        }


