{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "@controllers": ["src/controllers"],
            "@models": ["src/models"],
            "@database": ["src/database"],
            "@routes": ["src/routes"],
            "@controllers/*": ["src/controllers/*"],
            "@models/*": ["src/models/*"],
            "@database/*": ["src/database/*"],
            "@routes/*": ["src/routes/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}